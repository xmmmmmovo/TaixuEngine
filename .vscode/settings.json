{
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/build": true,
        "**/3rdparty": true,
        "**/.cpm_cache": true,
        "**/generated": true
    },
    "C_Cpp.intelliSenseEngine": "disabled",
    "clangd.onConfigChanged": "restart",
    "cmake.generator": "Ninja"
}
